<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/recommend_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="fitXY"
        android:src="@drawable/loading_img"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/titlebackground">

        <TextView
            android:id="@+id/recommend_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recommend_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/recommend_detail_btn"
            android:layout_alignEnd="@+id/recommend_detail_btn"
            android:layout_alignLeft="@+id/recommend_title_tv"
            android:layout_alignRight="@+id/recommend_detail_btn"
            android:layout_alignStart="@+id/recommend_title_tv"
            android:layout_below="@+id/recommend_title_tv"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/recommend_detail_btn"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/brush_business_btn_background"
            android:text="详情"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bottom_shadow"/>
</LinearLayout>